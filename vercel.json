{
  "version": 2,
  "builds": [
    {
      "src": "frontend/dist/**", 
      "use": "@vercel/static"
    },
    {
      "src": "backend/src/app.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}